FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json ./
RUN npm ci

# Copy source code
COPY . .

# Set environment variables
ENV PORT=3000
ENV REACT_APP_API_URL=http://localhost:8080
ENV REACT_APP_WS_URL=ws://localhost:8080/ws

# Expose port
EXPOSE 3000

# Start the app
CMD ["npm", "start"]